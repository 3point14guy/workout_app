<br>
<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    <div class="form-group col-md-6">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="form-group col-md-6">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="auth-buttons">
    <div class="row">
      <div class="col-md-3">
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    </div>

    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="form-submit">
        <%= f.submit "Log in", class: 'btn btn-light' %>
      </div>
    </div>
    <br>
<% end %>

    <div class="row">
      <div class="col-md-3">
      </div>
      <%= render "devise/shared/links" %>
      <br>
    </div>
  </div>
